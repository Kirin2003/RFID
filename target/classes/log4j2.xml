<Configuration status="info">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"></PatternLayout>
        </Console>



        <File name = "CIP" fileName = "cip.log" append = "true">
            <PatternLayout pattern="%m%n"></PatternLayout>
        </File>

        <File name = "DLS" fileName = "cip.log" append = "false">
            <PatternLayout pattern="%m%n"></PatternLayout>
        </File>


    </Appenders>
    <Loggers>
        <Root level="info" >
            <AppenderRef ref="DLS" level = "info"/>
        </Root>
    </Loggers>
</Configuration>

